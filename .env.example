# ============================================
# Schedule-Bot Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Discord Bot Configuration (required)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here

# Discord OAuth Configuration (optional - for user authentication via Discord)
# Get these from https://discord.com/developers/applications
# Redirect URI should be: https://your-dashboard-url.com/auth/callback
# DISCORD_CLIENT_ID=your_discord_client_id_here
# DISCORD_CLIENT_SECRET=your_discord_client_secret_here
# DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback

# PostgreSQL Database (required)
DATABASE_URL="postgresql://schedule_bot_user:your_password@localhost:5432/schedule_bot?schema=public"

# Admin Dashboard Credentials (required)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here
# Generate hash: npm run build && node dist/generateHash.js YOUR_PASSWORD

# JWT Secret (required, min 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Dashboard URL (for CORS, defaults to http://localhost:3000)
DASHBOARD_URL=http://localhost:3000

# Server Port (defaults to 3001)
# PORT=3001
